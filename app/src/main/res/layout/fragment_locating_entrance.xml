<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/entrance_online"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/spacing_5"
        android:background="@color/color_bisque3"
        android:gravity="center"
        android:text="@string/locating_online_title_text"/>
    <TextView
        android:id="@+id/entrance_offline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/spacing_5"
        android:background="@color/color_bisque3"
        android:gravity="center"
        android:text="@string/locating_offline_title_text"/>
</LinearLayout>