<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/loading_content"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/base_process_bg" >

        <com.libs.ui.views.ProgressBarCircular
            android:id="@+id/loadview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true" >
        </com.libs.ui.views.ProgressBarCircular>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loadview"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/base_view_indicator_bright_foreground_disabled_holo_light"
            android:text="@string/base_load_text"
            android:textSize="@dimen/common_actionbar_title_size" />
    </RelativeLayout>

</RelativeLayout>