<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/spot_edit_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="点击进行网络测试"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <Button
        android:id="@+id/spot_edit_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spot_edit_title_txt"
        android:layout_alignLeft="@id/spot_edit_title_txt"
        android:layout_margin="10dp"
        android:text="@string/common_save_return_text"/>

    <TextView
        android:id="@+id/spot_edit_x_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="80dp"
        android:layout_margin="10dp"
        android:layout_below="@id/spot_edit_save_btn"
        android:text="@string/spot_edit_x_label" />

</RelativeLayout>
